@using EPiServer.Web.Mvc.Html
@using ResponsivePictureSample.Features
@using ResponsivePictureSample.Features.Pages.ProjectPage
@model ResponsivePictureSample.Features.Pages.ProjectPage.ProjectPage

<article>
    <div class="header">
        <div class="content">
            <h1>
                @Html.PropertyFor(m => m.Title)
            </h1>
        </div>
        @Html.ImagePropertyFor(m=>m.MainImage, PictureProfiles.HeaderImage)
    </div>
    <div class="content breadcrumb">
                @Html.PropertyFor(x => x.ParentLink) > @Model.Title
    </div>
    <div class="content description">
        @Html.PropertyFor(m => m.Description)
    </div>
    <div class="content images">
        @Html.PropertyFor(m => m.Images,
            new
            {
                PictureProfile = PictureProfiles.ProjectImagesGallery
            })
    </div>
</article>

<style>
    .header {
        width: 100%;
        height: 40vh;
        position: relative;
    }
    
    .header img {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        opacity: 0.5;
        object-fit: cover;
        object-position: center;
        z-index: 1;
    }
    
    .header h1 {
        position: absolute;
        top: 50%;
        z-index:2;
    }
    
    .content {
        margin: auto;
        max-width: 1140px;
    }
    
    .breadcrumb {
        margin: 20px auto;
    }
    
    .breadcrumb a {
        color:  black;
    }
    
    .description {
        padding-top: 20px;
        border-top: 1px solid gray;  
    }
    
    .images {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        width: 100%;
    }
        
    .images img {
        margin: 15px;
        width: 45%;
    }
        
    .images div {
       display: inline;
    }
</style>